<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffff"
    android:gravity="center">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/deviceListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/run_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ff0000"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="심박수가 측정되지 않습니다."/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/timePeriod"
                    android:layout_marginVertical="45dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:gravity="center"
                    android:text="00:00"
                    android:textSize="30sp"
                    grid:layout_columnSpan="4"
                    grid:layout_gravity="center"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/inTimeStep"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:text="\n0"
                    android:textSize="80px"
                    android:textColor="#000000"
                    grid:layout_columnSpan="4"
                    grid:layout_gravity="center" />

                    <ImageView
                        android:id="@+id/exercise"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="17dp"
                        android:src="@drawable/ic_accessibility_new_black_24dp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/timer" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/develop_layout"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingBottom="40dp"
                android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/vibrationTimePeriod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="설정 주기 간격: NONE"
                                    android:textAlignment="center"
                                    android:textSize="15dp"
                                    grid:layout_gravity="fill_horizontal"
                                    />
                                <Spinner
                                    android:id="@+id/sendVibPeriod"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    grid:layout_gravity="fill_horizontal" />
                            </LinearLayout>
                            <Button
                                android:id="@+id/setVibPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="주기설정"
                                grid:layout_columnSpan="4"
                                grid:layout_gravity="fill_horizontal"/>
                        </LinearLayout>
            </LinearLayout>



<!--            시간 설정 컴포넌트 시작부분-->
            <TextView
                android:id="@+id/activationTimePeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정 활동 시간: NONE"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="17dp"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal"
                android:paddingBottom="10dp"
                />


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/time_layout"
                android:layout_marginTop="20dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:background="@drawable/layout_background"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시작시간"/>

                        <Spinner
                            android:dropDownWidth="50dp"
                            android:textColor="#000000"
                            android:id="@+id/startHourSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineSpotShadowColor="#000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시"
                            grid:layout_columnSpan="1" />

                        <Spinner
                            android:dropDownWidth="50dp"
                            android:textColor="#000000"
                            android:id="@+id/startMinuteSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="fill_horizontal"
                            />

                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분"
                            grid:layout_columnSpan="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="종료시간"
                            grid:layout_columnSpan="4" />

                        <Spinner
                            android:dropDownWidth="50dp"
                            android:textColor="#000000"
                            android:id="@+id/endHourSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            grid:layout_columnSpan = "1"
                            android:layout_gravity="fill_horizontal"
                            />

                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="시"
                            grid:layout_columnSpan="1" />

                        <Spinner
                            android:dropDownWidth="50dp"
                            android:textColor="#000000"
                            android:id="@+id/endMinuteSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            grid:layout_columnSpan="1"
                            android:layout_gravity="fill_horizontal"
                            />

                        <TextView
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="분"
                            grid:layout_columnSpan="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/currentCase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Current case: NONE"
                                android:gravity="center"
                                android:textSize="15dp"
                                grid:layout_columnSpan="4"
                                grid:layout_gravity="fill_horizontal" />
                            <Spinner
                                android:id="@+id/sendCaseSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="set Lab Case"
                                grid:layout_gravity="fill_horizontal" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/setLabCase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="top"
                            android:text="Case 설정"
                            grid:layout_gravity="fill_horizontal" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/setVibrationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="설정 완료"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            grid:layout_gravity="center"/>
                        <Button
                            android:id="@+id/cancel_setVibrationTime"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:text="취소"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            grid:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <Button
                    android:id="@+id/time_show"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="40dp"
                    android:textSize="17dp"
                    android:text="시간설정"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom|end"
                    android:src="@drawable/ic_add"
                    android:layout_margin="16dp" />
<!--                <Button-->
<!--                    android:id="@+id/sendEmail"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="send email"-->
<!--                    grid:layout_columnSpan="4"-->
<!--                    grid:layout_gravity="fill_horizontal" />-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>