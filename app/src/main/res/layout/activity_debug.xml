<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nodomain.freeyourgadget.gadgetbridge.activities.ControlCenterv2">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            grid:alignmentMode="alignMargins"
            grid:columnCount="4">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debuge session"
                android:textAppearance="?android:attr/textAppearanceLarge"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <Spinner
                android:id="@+id/sendCaseSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set Lab Case"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <Spinner
                android:id="@+id/sendVibPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작시간"
                grid:layout_columnSpan="4" />

            <EditText
                android:id="@+id/startHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0~23"
                android:maxLength="2"
                android:singleLine="true"
                grid:layout_columnSpan="1"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시"
                grid:layout_columnSpan="1" />

            <EditText
                android:id="@+id/startMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0~59"
                android:maxLength="2"
                android:singleLine="true"
                grid:layout_columnSpan="1"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                grid:layout_columnSpan="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료시간"
                grid:layout_columnSpan="4" />

            <EditText
                android:id="@+id/endHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0~23"
                android:maxLength="2"
                android:singleLine="true"
                grid:layout_columnSpan="1"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시"
                grid:layout_columnSpan="1" />

            <EditText
                android:id="@+id/endMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0~59"
                android:maxLength="2"
                android:singleLine="true"
                grid:layout_columnSpan="1"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분"
                grid:layout_columnSpan="1" />

            <TextView
                android:id="@+id/activationTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정 활동 시간: NONE"
                android:textAlignment="center"
                android:textSize="50px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal"
                />

            <TextView
                android:id="@+id/vibrationTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="설정 주기 간격: NONE"
                android:textAlignment="center"
                android:textSize="50px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal"
                />
            <TextView
                android:id="@+id/currentCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current case: NONE"
                android:textAlignment="center"
                android:textSize="75px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/realtimeHR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00 bpm"
                android:textAlignment="center"
                android:textSize="100px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/realtimeSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하루 총 스텝:0"
                android:textAlignment="center"
                android:textSize="100px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/timePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경과 시간: 0"
                android:textAlignment="center"
                android:textSize="100px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <TextView
                android:id="@+id/inTimeStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주기 내 STEP: 0"
                android:textAlignment="center"
                android:textSize="100px"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />


            <Button
                android:id="@+id/setLabCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set Case"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <Button
                android:id="@+id/setVibrationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set Activation Time"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />

            <Button
                android:id="@+id/setVibPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set Period"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal"/>


            <Button
                android:id="@+id/sendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send email"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />


            <Button
                android:id="@+id/sendDataBase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send DataBase"
                grid:layout_columnSpan="4"
                grid:layout_gravity="fill_horizontal" />


        </androidx.gridlayout.widget.GridLayout>

    </ScrollView>

</RelativeLayout>